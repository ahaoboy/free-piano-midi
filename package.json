{
  "name": "free-piano-midi",
  "version": "0.1.0",
  "description": "free-piano-midi",
  "scripts": {
    "copy:wasm": "cp -r ./src-ts/wasm/index.d.ts ./esm/wasm/index.d.ts",
    "build:cjs": "tsc --outDir cjs --declaration false --module commonjs",
    "build:esm": "tsc --outDir esm --module esnext && npm run copy:wasm",
    "build": "npm run build:cjs && npm run build:esm && pnpm run copy:wasm",
    "build:full": "pnpm run build:wasm && pnpm run build:inline && pnpm run build",
    "build:wasm": "wasm-pack build --target=web --out-dir ./web --release",
    "build:inline": "wasm-pack-inline ./web -d ./src-ts/wasm --name index"
  },
  "main": "esm/index.js",
  "bin": {
    "free-piano-midi": "./cjs/cli.js"
  },
  "types": "./esm/index.d.ts",
  "author": "ahaoboy",
  "license": "MIT",
  "homepage": "https://github.com/ahaoboy/free-piano-midi",
  "exports": {
    ".": {
      "types": "./esm/index.d.ts",
      "import": "./esm/index.js",
      "require": "./cjs/index.js",
      "default": "./cjs/index.js"
    },
    "./tool": {
      "types": "./esm/tool.d.ts",
      "import": "./esm/tool.js",
      "require": "./cjs/tool.js",
      "default": "./cjs/tool.js"
    }
  },
  "files": [
    "cjs",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ahaoboy/free-piano-midi.git"
  },
  "keywords": [
    "free-piano-midi"
  ],
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.9.2",
    "wasm-pack-inline": "^0.1.4"
  }
}
